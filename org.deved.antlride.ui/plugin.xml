   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="org.deved.antlride.ui"
            name="%antlride.ui.category">
      </category>
      <view            
            category="org.deved.antlride.ui"
            name="%antlride.ui.views.doc"
            icon="icons/obj16/g.gif"
            class="org.deved.antlride.internal.ui.views.doc.AntlrDocumentationView"
            id="org.deved.antlride.ui.AntlrDocumentationView">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.console.consoleFactories">
      <consoleFactory
            class="org.deved.antlride.internal.ui.AntlrConsoleFactory"
            icon="icons/etool16/console.gif"
            label="%antlride.ui.views.console">
      </consoleFactory>
   </extension>
   <extension
         point="org.eclipse.compare.contentMergeViewers">
      <viewer
            class="org.deved.antlride.internal.ui.editor.compare.AntlrContentViewerCreator"
            extensions="g"
            id="org.deved.antlride.ui.compare.contentViewerCreator">
      </viewer>
      <contentTypeBinding
            contentMergeViewerId="org.deved.antlride.ui.compare.contentViewerCreator"
            contentTypeId="org.deved.antlride.antlrContentType">
      </contentTypeBinding>
      
